<%= render partial: 'layouts/errors', locals: {object: @loan} %>

<% @loans.each do |l| %>
  <ul>
    <%=l.loaned_on.strftime("%b %e, %l:%M %p")%>: <%=link_to l.tool.name, tool_path(l.tool) %> was loaned to <%= l.borrower.name %>
    for <%=l.duration%> days from <%= l.tool.library.username %>
  </ul>
<% end %>
